{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "checkJs": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "node_modules",
    "**/node_modules/**"
  ],
  "include": [
    "src/**/*",
    "public/**/*"
  ]
}
